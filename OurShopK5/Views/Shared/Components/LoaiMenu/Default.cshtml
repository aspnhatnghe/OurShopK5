@model IEnumerable<OurShopK5.DataModels.Loai>
<!--Menu loại-->
<div class="card">
    <div class="card-header bg-info">DANH MỤC</div>
    <div class="list-group">
        @{
            var dsLoais = Model.Where(p => p.MaLoaiCha != 0).OrderBy(p => p.MaLoaiCha);
        }
        @using OurShopK5.DataModels
        @foreach (Loai loai in dsLoais)
        {

            <a asp-action="Index" asp-controller="HangHoa" asp-route-loai="@loai.MaLoai" class="list-group-item">
                @*<i class='fas fa-chess-knight'></i>*@
                @loai.TenLoai
            </a>
        }
    </div>
</div>
<nav class="navbar nav_bottom">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header nav_2">
        <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
        <ul class="nav navbar-nav nav_1">
            @{
                var dsLoaiCha = Model.Where(p => p.MaLoaiCha == 0);
            }
            @foreach (Loai loCha in dsLoaiCha)
            {
                var dsLoai = Model.Where(p => p.MaLoaiCha == loCha.MaLoai);
                @if (dsLoai.Count() == 0)
                {
                    <li>
                        <a asp-action="Index" asp-controller="HangHoa" asp-route-loai="@loCha.MaLoai">
                            @loCha.TenLoai
                        </a>
                    </li>
                }
                else
                {
                    <li class="dropdown mega-dropdown active">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@loCha.TenLoai<span class="caret"></span></a>
                        <div class="dropdown-menu mega-dropdown-menu w3ls_vegetables_menu">
                            <div class="w3ls_vegetables">
                                <ul>
                                    @foreach (var lo in dsLoai)
                                    {
                                        <li>
                                            <a asp-action="Index" asp-controller="HangHoa" asp-route-loai="@lo.MaLoai">
                                                @lo.TenLoai
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
    </div><!-- /.navbar-collapse -->
</nav>